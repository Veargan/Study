<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.adm.calculator_http_php.ui.MainActivity">

    <EditText
        android:id="@+id/et_value1"
        android:hint="@string/value1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/et_operation"
        android:hint="@string/operation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/et_value1"/>
    <EditText
        android:id="@+id/et_value2"
        android:hint="@string/value1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/et_operation" />

    <EditText
        android:id="@+id/et_result"
        android:hint="@string/result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/et_value2" />

    <Button
        android:id="@+id/button_calculate"
        android:text="@string/calculate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>
