<UserControl x:Class="RisovalkaWpf.Figure"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RisovalkaWpf"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300" Loaded="UserControl_Loaded">
    <Grid x:Name="grfig" GotFocus="GotF" LostFocus="grfig_LostFocus" KeyDown="KeyEvents">
        <Canvas x:Name="canvas" Background="AntiqueWhite" MouseMove="Grid_MouseMove" MouseUp="Grid_MouseUp" MouseDown="Grid_MouseDown" KeyDown="KeyEvents" />
    </Grid>
</UserControl>
